{
	"manifest_version": 2,
	"name": "LeetCode PiShock",
	"version": "1.0.0",
	"description": "Shocks or vibrates a PiShock device based on your LeetCode submission results.",
	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"storage",
		"tabs",
		"https://leetcode.com/*",
		"wss://broker.pishock.com/*"
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": true
	},
	"browser_action": {
		"default_title": "LeetCode PiShock settings"
	},
	"content_scripts": [
		{
			"matches": ["https://leetcode.com/problems/*"],
			"js": ["content.js"],
			"css": ["content.css"],
			"run_at": "document_idle"
		}
	]
}
