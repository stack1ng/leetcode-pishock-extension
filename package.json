{
	"name": "leetcode-pishock-extension",
	"displayName": "LeetCode PiShock",
	"version": "1.0.0",
	"description": "Shocks or vibrates a PiShock device based on your LeetCode submission results.",
	"author": "",
	"scripts": {
		"dev": "plasmo dev",
		"dev:chrome": "plasmo dev --target=chrome-mv3",
		"dev:firefox": "plasmo dev --target=firefox-mv3",
		"build": "plasmo build",
		"build:chrome": "plasmo build --target=chrome-mv3",
		"build:firefox": "plasmo build --target=firefox-mv3",
		"package": "plasmo package",
		"package:chrome": "plasmo package --target=chrome-mv3",
		"package:firefox": "plasmo package --target=firefox-mv3",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@plasmohq/storage": "^1.14.0",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "^0.562.0",
		"plasmo": "^0.89.3",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"sonner": "^2.0.7",
		"tailwind-merge": "^3.4.0",
		"usehooks-ts": "^3.1.1"
	},
	"devDependencies": {
		"@plasmohq/prettier-plugin-sort-imports": "^4.0.1",
		"@types/chrome": "^0.0.287",
		"@types/node": "^25.0.3",
		"@types/react": "^18.3.12",
		"@types/react-dom": "^18.3.1",
		"autoprefixer": "^10.4.21",
		"postcss": "^8.5.6",
		"tailwindcss": "^3.4.17",
		"typescript": "^5.7.2"
	},
	"manifest": {
		"host_permissions": [
			"https://leetcode.com/*"
		],
		"permissions": [
			"storage",
			"tabs"
		],
		"browser_specific_settings": {
			"gecko": {
				"id": "leetcode-pishock@extension.local"
			}
		}
	}
}
